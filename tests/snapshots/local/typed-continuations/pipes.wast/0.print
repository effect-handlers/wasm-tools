(module $pipes
  (type $pfun (;0;) (func (result i32)))
  (type $cfun (;1;) (func (param i32) (result i32)))
  (type $producer (;2;) (cont $pfun))
  (type $consumer (;3;) (cont $cfun))
  (type (;4;) (func (param i32)))
  (type (;5;) (func (param (ref $producer) (ref $consumer))))
  (type (;6;) (func (result i32 (ref $producer))))
  (func $piper (;0;) (type 5) (param $p (ref $producer)) (param $c (ref $consumer))
    (local $n i32) (local $consuming i32)
    i32.const -1
    local.set $n
    i32.const 1
    local.set $consuming
    loop $l ;; label = @1
      local.get $consuming
      if ;; label = @2
        block $on-receive (result (ref $consumer)) ;; label = @3
          local.get $n
          local.get $c
          resume $consumer (tag 1 0 (;@3;))
          return
        end
        local.set $c
        i32.const 0
        local.set $consuming
        br 1 (;@1;)
      end
      block $on-send (type 6) (result i32 (ref $producer)) ;; label = @2
        local.get $p
        resume $producer (tag 0 0 (;@2;))
        return
      end
      local.set $p
      local.set $n
      i32.const 1
      local.set $consuming
      br 0 (;@1;)
    end
  )
  (tag (;0;) (type 4) (param i32))
  (tag (;1;) (type $pfun) (result i32))
  (export "send" (tag 0))
  (export "receive" (tag 1))
  (export "pipe" (func $piper))
)